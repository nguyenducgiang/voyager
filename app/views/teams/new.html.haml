= form_for @team do |f|
  .space-y-12
    .border-b.pb-12{:class => "border-gray-900/10"}
      %h2.text-base.font-semibold.leading-7.text-gray-900 Add Team
      .mt-10.grid.grid-cols-1.gap-x-6.gap-y-8.sm:grid-cols-6
        .sm:col-span-4
          = f.label :name, "Team name", class: "block text-sm font-medium leading-6 text-gray-900"
          .mt-2
            = f.text_field :name, autofocus: true, required: true, class: "block w-full rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 py-1.5"
        .col-span-full
          = f.label :description, "Team description", class: "block text-sm font-medium leading-6 text-gray-900"
          .mt-2
            = f.text_area :description, required: true, class: "block w-full rounded-md border-0 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm.sm:leading-6 py-1.5", rows: 3
  .mt-6.flex.items-center.justify-end.gap-x-6
    = link_to "Cancel", teams_path, class: "text-sm font-semibold leading-6 text-gray-900"
    = f.submit "Save", class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
