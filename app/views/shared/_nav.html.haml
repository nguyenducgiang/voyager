            %svg.hidden.h-6.w-6{"aria-hidden" => "true", :fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24"}
              %path{:d => "M6 18L18 6M6 6l12 12", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
        .flex.flex-shrink-0.items-center
          %img.h-8.w-auto{:alt => "Your Company", :src => "https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=500"}/
        .hidden.md:ml-6.md:flex.md:items-center.md:space-x-4
          / Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white"
          .relative.ml-3
            = link_to "My Teams", teams_path, class: "rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white cursor-pointer"

          - if current_user.own?(current_team)
            %a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300.hover:bg-gray-700.hover:text-white{:href => "#"}= current_team.name
            %a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300.hover:bg-gray-700.hover:text-white{:href => "#"} Memberships
            %a.rounded-md.px-3.py-2.text-sm.font-medium.text-gray-300.hover:bg-gray-700.hover:text-white{:href => "#"} Roles
          - elsif current_user.member_of?(current_team)

      .flex.items-center
        .hidden.md:ml-4.md:flex.md:flex-shrink-0.md:items-center
          / Profile dropdown
          .relative.ml-3(data-controller="dropdown")
            %div
              %button#user-menu-button.relative.flex.rounded-full.bg-gray-800.text-sm.focus:outline-none.focus:ring-2.focus:ring-white.focus:ring-offset-2.focus:ring-offset-gray-800{"aria-expanded" => "false", "aria-haspopup" => "true", :type => "button"}(data-action="dropdown#toggle click@window->dropdown#hide")
                %span.absolute{:class => "-inset-1.5"}
                %span.sr-only Open user menu
                %img.h-8.w-8.rounded-full{:alt => "", :src => "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80"}/
